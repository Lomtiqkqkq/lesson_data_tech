{
  "name": "lessons_test_tech",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "gen:structure": "node /src/scripts/gen-structure.js",
    "dev": "tsx watch src/index.ts",
    "test": "jest --config jest.config.ts",
    "build": "tsc",
    "prod": "pm2 dist/index.js",
    "lint": "eslint --ignore-path .eslintignore \"src/**/*.ts\" --fix",
    "lint:check": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "generate:migrations": "npx sequelize-cli db:migrate",
    "create:migrations": "powershell -Command \"$name = Read-Host 'Введите имя миграции'; npx sequelize-cli migration:generate --name $name\"",
    "undo:migrations": "npx sequelize-cli db:migrate:undo",
    "undoAll:migations": "npx sequelize-cli db:migrate:undo:all",
    "create:seeds": "powershell -Command \"$name = Read-Host 'Введите имя сида'; npx sequelize-cli seed:generate --name $name\\",
    "generate:seeds": "npx sequelize-cli db:seed:all"
  },
  "dependencies": {
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "pg": "^8.15.5",
    "sequelize": "^6.37.7",
    "sequelize-typescript": "^2.1.6"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/jest": "29.5.14",
    "@types/node": "22.13.16",
    "@types/sequelize": "^4.28.20",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.0.0",
    "directory-tree": "^3.5.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.1",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-nest-di": "^1.6.1",
    "eslint-plugin-prettier": "^5.2.5",
    "prettier": "^3.5.3",
    "tree-cli": "^0.6.7",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.29.0"
  },
  "private": true
}
